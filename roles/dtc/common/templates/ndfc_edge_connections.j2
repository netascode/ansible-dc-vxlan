            BGP_PASSWORD: "{{ link.bgp_section.bgp_password }}"
            BGP_PASSWORD_ENABLE: true
            TEMPLATE_NAME: {{ MD.vxlan.global.name + '-' + link.dest_fabric + '-IPV4-EBGP' }}
            NEIGHBOR_ASN: {{ link.bgp_section.neighbor_asn }}
