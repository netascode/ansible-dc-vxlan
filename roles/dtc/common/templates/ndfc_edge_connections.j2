            ADMIN_STATE: true
            BGP_PASSWORD: ""
            BGP_PASSWORD_ENABLE: false
            OVERRIDE_LOCAL_ASN: false
            POLICY_ID: ""
            ROUTING_TAG: "{{ link.bgp_section.routing_tag | default('') }}"
