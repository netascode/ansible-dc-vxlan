  ENABLE_NETFLOW: {{ vxlan.ebgp_global.netflow.enable | default(defaults.vxlan.ebgp_global.netflow.enable) }}
{% if vxlan.ebgp_global.netflow.enable is defined and vxlan.ebgp_global.netflow.enable | bool or defaults.vxlan.ebgp_global.netflow.enable | bool %}
