[
  {% for attach in MD_Extended.vxlan.multisite.overlay.vrf_attach_groups_dict[vrf["vrf_attach_group"]] %}
  {

    "vrfName": "{{ vrf["name"] }}",
    {% for switch in switches_in_fabric %}
      {% if switch.logicalName == attach["hostname"] %}
    "fabric": "{{ switch.fabricName }}",
    "serialNumber": "{{ switch.serialNumber }}",
      {% endif %}
    {% endfor %}
    "freeformConfig": "",
    "extensionValues": "",
    "vlan": {{ vrf["vlan_id"] }},
    "deployment": true,
    "instanceValues": "{\"loopbackId\": \"{{ attach['loopback_id'] }}\", \"loopbackIpAddress\": \"{{ attach['loopback_ipv4'] | default('') }}\", \"loopbackIpV6Address\":\"{{ attach['loopback_ipv6'] | default('') }}\"}"
  }{% if not loop.last %},{% endif %}
  {% endfor %}
]

